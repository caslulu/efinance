# ============================================
# Root-level env vars for docker-compose.prod.yml
# ============================================
# Copy this file to .env and fill in the values.

# Database credentials (used by both postgres and backend services)
DB_USER=financeuser
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=financeapp

# Frontend build-time variable
# Use /api for Nginx proxy (recommended) or full URL like https://yourdomain.com/api
VITE_API_URL=/api
