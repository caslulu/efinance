# ============================================
# FinanceApp — Production Environment Variables
# ============================================
# Copy this file to .env.prod and fill in the values.
# DO NOT commit .env.prod to git!

# ---- Database ----
# (DATABASE_URL is set automatically by docker-compose.prod.yml)

# ---- JWT ----
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_USE_openssl_rand_base64_64

# ---- Email (Gmail SMTP) ----
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=emailfinancialpro@gmail.com
MAIL_PASS=your_gmail_app_password
MAIL_FROM="Finance App <emailfinancialpro@gmail.com>"

# ---- Google OAuth ----
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://SEU_DOMINIO_OU_IP/api/auth/google/redirect

# ---- URLs ----
# Use http:// se ainda não configurou HTTPS
FRONTEND_URL=http://SEU_DOMINIO_OU_IP
BACKEND_URL=http://SEU_DOMINIO_OU_IP/api

# ---- Cookie Security ----
# Set to 'true' when using HTTPS, 'false' for HTTP-only deployments
# If omitted, auto-detects from FRONTEND_URL scheme
FORCE_HTTPS=false
